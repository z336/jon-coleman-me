---
import PubDate from './PubDate.astro';

const { pageTitle, pubDate } = Astro.props;

const getPubDate = pubDate != undefined || null ? true : false;
---

<header class="page-header">
  <div class="wrapper">
    <h1>{pageTitle}</h1>
    {
      getPubDate ? (
        <p>
          <PubDate pubDate={pubDate} />
        </p>
      ) : (
        ''
      )
    }
  </div>
</header>
